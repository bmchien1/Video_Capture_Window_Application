<Page
    x:Class="VideoRecordingCC.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoRecordingCC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F0F0F0" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Settings" FontSize="32" FontWeight="Bold" Foreground="#333333" Margin="0,0,0,20" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Spacing="20">
            <ComboBox x:Name="SettingComboBox" Header="Video Resolution And Frame Rate" Padding="10" Margin="0,0,0,10" Foreground="Black">
            </ComboBox>
        </StackPanel>

        <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click" Background="Gray" Foreground="Black" Padding="10" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="2"/>
    </Grid>
</Page>
